@model Sistema.Web.ViewModel.FiltrosReportesViewModel
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="padding:20px; margin-top:20px">
    <div class="card-header" style="background-color: #3D0A0A; color: white; font-size: 24px ">
        <i class="fas fa-archive me-2" style="font-size: 24px;"></i> Reporte de Inventario
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="fecha_ingreso" class="col-sm-4 col-form-label">Fecha Ingreso:</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" id="fecha_ingreso" name="fecha_ingreso">
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="fecha_egreso" class="col-sm-4 col-form-label">Fecha Egreso:</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" id="fecha_egreso" name="fecha_egreso">
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="lista_materiales" class="col-sm-4 col-form-label">Lista de Materiales:</label>
            <div class="col-sm-8">
                <select class="form-control" id="lista_materiales" name="lista_materiales">
                    <!-- Opciones de lista de materiales -->
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="categoria" class="col-sm-4 col-form-label">Categoría:</label>
            <div class="col-sm-8">
                <select class="form-control" id="categoria" name="categoria">
                    <!-- Opciones de categoría -->
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="inventario" class="col-sm-4 col-form-label">Inventario:</label>
            <div class="col-sm-8">
                <select class="form-control" id="inventario" name="inventario">
                    <!-- Opciones de inventario -->
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label for="usuario" class="col-sm-4 col-form-label">Usuario:</label>
            <div class="col-sm-8">
                <select class="form-control" id="usuario" name="usuario">
                    <!-- Opciones de usuario -->
                </select>
            </div>
        </div>
    </div>

</div>

@model Sistema.Web.ViewModel.FiltrosReportesViewModel
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="padding:20px">
    <div class="card-header" style="background-color: darkblue; color: white ; font-size: 24px">
        <i class="fas fa-archive me-2" style="font-size: 24px;"></i> Reporte de Inventario
    </div>

    <div class="card-body">
        <div class="row">
            <div>
                <div class="widget-body">
                    <div class="widget-body-toolbar">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaIngreso)
                                    @Html.EditorFor(model => model.FechaIngreso, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <table id="tabla" class="display cell-border" style="width: 100%">

                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripcion</th>
                        <th>Descripcion</th>
                        <th>Descripcion</th>
                        <th>Descripcion</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

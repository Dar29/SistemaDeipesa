@{
    ViewBag.Title = "Materiales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Materiales","Home")">Administración</a></li>
    <li class="breadcrumb-item active">Materiales</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-toolbox me-1"></i> Lista de Materiales
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" id="btnCrearRegistro">Crear Nuevo</button>
            </div>
        </div>
        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Categoría</th>
                    <th>Precio Unitario</th>
                    <th>Moneda</th>
                    <th>Cantidad</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <form class="modal-content" name="frmMaterial">
            <div class="modal-header bg-dark text-light">
                <h5 class="modal-title" id="FormModalLabel">Materiales</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body g-4">
                <div class="row">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="txtidmaterial" name="IdMaterial" hidden>
                        <label for="txtnombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtnombre" name="Nombre">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="txtdescripcion" name="Descripcion">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtPrecioUnitario" class="form-label">Precio Unitario</label>
                        <input type="number" min="0" step="0.1" class="form-control" id="txtPrecioUnitario" name="PrecioUnitario">
                    </div>
                    <div class="col-sm-6">
                        <label for="ddlMoneda" class="form-label">Moneda</label>
                        <select class="form-select select2" id="ddlMoneda" name="IdMoneda">
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="selectcategoria" class="form-label">Categoria</label>
                        <select class="form-select select2" id="selectcategoria" name="IdCategoria">
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="selectactivo" class="form-label">Activo</label>
                        <select class="form-select" id="selectactivo" name="IdEstadoMaterial">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/Views/Materiales/index.js"></script>
}

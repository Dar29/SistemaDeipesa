@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Administración</a></li>
    <li class="breadcrumb-item active">Clientes</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-toolbox me-1"></i> Lista de Clientes
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" id="btnCrearRegistro">Crear Nuevo</button>
            </div>
        </div>
        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Direccion</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <form class="modal-content" name="frmCliente">
            <div class="modal-header bg-dark text-light">
                <h5 class="modal-title" id="FormModalLabel">Cliente</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body g-4">
                <div class="row">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="txtIdCliente" name="IdCliente" hidden>
                        <label for="txtNombres" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombres" name="Nombres">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtApellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="txtApellidos" name="Apellidos">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="txtEmail" name="Email">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtTelefono" class="form-label">Teléfono</label>
                        <input type="number" maxlength="8" class="form-control" id="txtTelefono" name="Telefono">
                    </div>
                    <div class="col-sm-12">
                        <label for="txtIdentificacion" class="form-label">Identificacion</label>
                        <input type="text" class="form-control" id="txtIdentificacion" name="Identificacion">
                    </div>
                    <div class="col-sm-12">
                        <label for="txtDireccion" class="form-label">Dirección</label>
                        <textarea type="text" class="form-control" id="txtDireccion" name="Direccion"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/Views/Clientes/index.js"></script>
}
